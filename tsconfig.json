{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "moduleDetection": "force",

    // Path
    "baseUrl": "./src",
    "module": "NodeNext",
    // Bundler mode
    "moduleResolution": "NodeNext",
    "paths": {
      "@domain/*": ["domain/*"],
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["vitest/globals"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    // Best practices
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "noEmit": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "vitest.config.ts", "eslint.config.mjs", "commitlint.config.ts", "tsup.config.ts"],
  "exclude": ["dist", "coverage", ".husky", ".github", "node_modules"]
}
